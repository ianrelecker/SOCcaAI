# API Keys
NVD_API_KEY=your_nvd_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# SOCca Site URL (used for report references)
SITE_URL=https://socca.tech

# OpenAI Models
OPENAI_REPORT_MODEL=o1-mini-2024-09-12
OPENAI_ANALYSIS_MODEL=gpt-4o-mini-2024-07-18

# Database Configuration
PROCESSED_CVES_DB=processed_cves.db
CVE_REPORTS_DB=cve_reports.db
KEV_DATA_DB=kev_data.db

# Application Settings
# NOTE: For numeric values, only the digits before any spaces or comments are used
POLLING_INTERVAL=60       # seconds between NVD API checks
REPORT_HOURS=5,13         # hours when reports should be generated
REPORT_MINUTES=55         # minute when reports should be generated
TIMEZONE_OFFSET=-8        # hours to offset from UTC
CVSS_CRITICAL_THRESHOLD=8.0  # minimum CVSS score for critical alerts

# Microsoft Sentinel Settings
SENTINEL_WORKSPACE_ID=your-sentinel-workspace-id
SENTINEL_PRIMARY_KEY=your-sentinel-primary-key
SENTINEL_LOG_TYPE=SOCcaCVE
SENTINEL_API_VERSION=2016-04-01

# Email Notification Settings (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_RECIPIENTS=security@example.com,admin@example.com

# Slack Notification (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Teams Notification (optional)
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your/webhook/url