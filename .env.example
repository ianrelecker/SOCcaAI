# SOCca Core Configuration

# NVD API Configuration
# Get your API key from https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=your_nvd_api_key_here

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Microsoft Sentinel Configuration
# Get your Workspace ID and Primary Key from your Log Analytics workspace
SENTINEL_WORKSPACE_ID=your_sentinel_workspace_id
SENTINEL_PRIMARY_KEY=your_sentinel_primary_key
SENTINEL_LOG_TYPE=SOCcaCVE
SENTINEL_API_VERSION=2016-04-01

# General Settings
POLLING_INTERVAL=60  # Seconds between NVD API polls (1 minute)
MAX_TOKEN_LIMIT=120000  # Maximum tokens for OpenAI prompts
TZ=UTC                 # Timezone