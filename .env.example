# SOCca Core Configuration

# Required API Keys
NVD_API_KEY=your_nvd_api_key              # From https://nvd.nist.gov/developers/request-an-api-key
OPENAI_API_KEY=your_openai_api_key        # From https://platform.openai.com/
SENTINEL_WORKSPACE_ID=your_workspace_id   # From Microsoft Sentinel
SENTINEL_PRIMARY_KEY=your_primary_key     # From Microsoft Sentinel

# Microsoft Sentinel Settings
SENTINEL_LOG_TYPE=SOCcaCVE                # Name of the custom log in Sentinel
SENTINEL_API_VERSION=2016-04-01           # Sentinel API version

# Optional Settings
OPENAI_MODEL=gpt-4o-mini                  # OpenAI model to use
POLLING_INTERVAL=60                       # Seconds between NVD API checks (1 minute)
MAX_TOKEN_LIMIT=120000                    # Maximum tokens for OpenAI prompts
TZ=UTC                                    # Timezone